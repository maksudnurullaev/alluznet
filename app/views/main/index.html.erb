<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
	<head>
		<title><%=@title%></title>
		<script src="./javascripts/ext-base.js" type="text/javascript"></script>
		<script src="./javascripts/ext-all.js" type="text/javascript"></script>
		<link href="./stylesheets/ext-all.css" media="screen" rel="stylesheet" type="text/css" />
		<link href="./stylesheets/icons.css" media="screen" rel="stylesheet" type="text/css" />
        <script src="./javascripts/login.js" type="text/javascript"></script>
		<script src="./javascripts/registration.js" type="text/javascript"></script>
        <script src="./javascripts/treectrl.js" type="text/javascript"></script>
		<script src="./javascripts/tooltips.js" type="text/javascript"></script>
		<script src="./javascripts/captcha.js" type="text/javascript"></script>
		<script src="./javascripts/dhtmlHistory.js" type="text/javascript"></script>
		<script src="./javascripts/<%=@lang%>.js" type="text/javascript"></script>
				
						
				<!--<%= javascript_include_tag "temp"%> 	
				<%= javascript_include_tag "tree_ctrl"%> -->
	</head>
    <body>
		<script type="text/javascript">
			var tabpanel, stbar, treeloader = new Ext.tree.TreeLoader({
				url: '/main/getCategories',
				requestMethod: 'GET'
			});
			treeloader.on("beforeload", function(treeLoader, node) {
				treeloader.baseParams.index = node.getDepth();    
				treeloader.baseParams.path = node.id;
            }, this); 
			<% if (!@cookie) %>
			stbar = new Ext.StatusBar({
				text: Language.hi+'<%=@uname%>',
				id: 'hi',
				items: [{
					  xtype: 'textfield',
					  height: 20,
					  width: 400
					 },{
					  text: Language.search
					  },{
					text: Language.login,
					id: 'authen',
					menu: new Ext.menu.Menu({
                                            
                            items: [{
								text: Language.login,
                                listeners: {
                                'click': show_login
                                }
                            },{
								text: Language.registration,
                                listeners: {
								'click': show_Registration
								}
							},{
								text: Language.forgot_pass,
								listeners: {
								'click': forgot_password
								}
							}]
					})
				},{
				text: Language.lang,
					menu: new Ext.menu.Menu({
						items: [{
							text: Language.uz,
							id: 'uz',
							name: 'uz',
							listeners: {
								'click': function(){
									setLang(Ext.getCmp('uz'));
									handleMouseClick('language:','uz');
								}
                            }
						},{
							text: Language.ru,
							id: 'ru',
							listeners: {
								'click': function(){
									setLang(Ext.getCmp('ru'));
									handleMouseClick('language:','ru');
								}
                            }
						},{
							text: Language.en,
							id: 'en',
							listeners: {
								'click': setLang
                            }
						}]
					})
				}]
                });
	tabpanel = {
			region: 'center',
			title: 'Main tab panel',
			xtype: 'tabpanel',
			id: 'main-tab-panel',
			autoScroll: true,
			enableTabScroll: true,
			deferredRender: false,
			minTabWidth: 120,
			activeTab: 0,
			items: [{
				html: 'Новости системы',
				iconCls: 'tree-1-3',
				title: Language.news,
                id: 'MainTab',
                border: true
			}]
		};
        <% else %>
		tabpanel = {
		    region: 'center',
			title: 'Main tab panel',
			xtype: 'tabpanel',
			id: 'main-tab-panel',
			autoScroll: true,
			enableTabScroll: true,
			deferredRender: false,
			minTabWidth: 120,
			activeTab: 0,
			items: [{
				html: 'Новости сайта',
				iconCls: 'tree-1-3',
				title: Language.news,
				id: 'MainTab',
				border: true
			},{
				title: Language.per_cab,
				xtype: 'form',
				id: 'cab-tab',
				name: 'cab-tab',
				border: false,
				bodyStyle: 'padding: 10',
				items: [{
					layout: 'form',
					xtype:'fieldset',
					id:'passwordset',
					name: 'passwordset',
					title: Language.password,
					height: 150,
					width: 300,
					border: true,
					defaultType: 'textfield',
					collapsible: true,
					collapsed: true,
					items: [{
						fieldLabel: Language.old_pass,
						id: 'oldPass',
						name: 'oldPass',
						inputType: 'password'
					},{
						fieldLabel: Language.new_pass,
						id: 'newPass',
						inputType: 'password'
					},{
						fieldLabel: Language.conf_pass,
						id: 'confPass',
						inputType: 'password',
                        vtype: 'password',
                        initialPassField: 'newPass'
					}],
					bbar: new Ext.StatusBar({
						defaultText: '',
						id: 'basic-statusbar',
						items: [{
							text: Language.save,
							id: 'btnsave',
							xtype: 'button',
							handler: function()
							{
								op=Ext.getCmp('oldPass').getValue();
								np=Ext.getCmp('newPass').getValue();
								loadFn('btnsave', 'basic-statusbar', op, np)
							}
						}]
					})
				}]
			}]
		};
		stbar = new Ext.StatusBar({
				text: Language.hi+'<%=@uname%>',
				id: 'hi',
				items: [{
						xtype: 'textfield',
                        height: 20,
                        width: 400
                    },{
						text: Language.search
                    },{
						text: Language.per_cab,
                       id: 'authen',
					menu: new Ext.menu.Menu({
						items: [{
							text: Language.msgs,
							listeners: {
								'click': function()
								{
									
                                }
							}
						},{
							text: Language.add_ann,
							id: 'add_annunce',
							listeners: {
								'click': function()
								{
									
                                }
							}
                        },{
							text: Language.you_ann,
							listeners: {
								'click': function()
								{
									
                                }
							}
                        },{
							text: Language.per_data,
							listeners: {
								'click': function()
								{
									Ext.getCmp('main-tab-panel').activate('cab-tab');
									Ext.getCmp('passwordset').expand(true);
                                }
							}
                        },{
							text: Language.logout,
							listeners: {
								'click': function()
								{
									location.assign('/main/logout');
                                }
							}
                        }]
					})
					},{
				text: Language.lang,
					menu: new Ext.menu.Menu({
						items: [{
							text: Language.uz		
						},{
							text: Language.ru
						},{
							text: Language.en
						}]
					})
				}]
                });
        <% end %>
	</script>
	<script src="./javascripts/blogs.js" type="text/javascript"></script>
	<script src="./javascripts/main.js" type="text/javascript"></script>
	</body>
</html>